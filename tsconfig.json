{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "jsx": "react",
        "strict": true,
        "esModuleInterop": true,
        // "allowSyntheticDefaultImports": true,
        "lib": ["es2015", "dom"],
        "outDir": "./dist/",
        "sourceMap": true,
        "declaration": true,
        "plugins": [{ "name": "typescript-plugin-css-modules" }],
        "noImplicitAny": false,
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist", "./src/stories"]
}